<%- include("../partials/header") %>

<div class="container mt-3">
    <div class="justify-content-center">
        <h1 class="text-center">Edit Comment</h1>
        <form class="w-50 p-3 mx-auto" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea type="text" class="form-control" name="comment[text]"><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
            <a class="text-center" href="/campgrounds/<%= campground_id %>">Go Back</a>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>