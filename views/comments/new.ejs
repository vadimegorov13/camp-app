<%- include("../partials/header") %>

<div class="container mt-3">
    <div class="justify-content-center">
        <h1 class="text-center">Add New Comment to <%= campground.name %></h1>
        <form class="w-50 p-3 mx-auto" action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <textarea type="text" class="form-control" placeholder="Text" name="comment[text]"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
            <a class="text-center" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>