<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron mt-4 mb-4">
        <h1>Welcome To YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
        </p>
        <p>
            <form action="/campgrounds" method="GET" class="form-inline">
                <div class="form-group">
                    <input type="text" name="search" placeholder="Campground search..." class="form-control">
                    <input type="submit" value="Search" class="btn btn-primary">
                </div>
            </form>
        </p>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <div class="col-md-12">
            <% if(noMatch !== null) {%>
                <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %>" alt="Campground Image">
                    <div class="card-body">
                        <h4 class="card-text"><%= campground.name %></h4>
                        <p>
                            <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

</div>

<%- include("../partials/footer") %>